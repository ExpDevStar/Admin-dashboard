%header.content-header
  .btn-toolbar.primary-toolbar
    - if true
      = link_to "#", class: "btn btn-info" do
        %i.fa.fa-search-plus

      = button_tag "Save & Publish", class: "btn btn-success"
    - else
      = link_to "#", class: "btn btn-default" do
        %i.fa.fa-plus

  .btn-toolbar.secondary-toolbar
    - if true
      .btn-group
        = button_tag "Preview", class: "btn btn-primary"

      = link_to "#", class: "btn btn-danger", method: :delete, data: { toggle: "confirm-delete", placement: "bottom" } do
        %i.fa.fa-trash
        Delete Page

  %h1 Test Page

  %ol.breadcrumb
    %li.breadcrumb-item= link_to "Home", "/"
    %li.breadcrumb-item.active Test Page

.main-content-container.with-sidebar
  .main-content-wrapper
    %ul.nav.nav-tabs
      %li.active= link_to "Table", "#tab-table", role: "tab", data: { toggle: "tab" }
      %li= link_to "Lorem Ipsum", "#tab-lorem-ipsum", role: "tab", data: { toggle: "tab" }
      %li= link_to "Headings", "#tab-headings", role: "tab", data: { toggle: "tab" }
      %li
        = link_to "#tab-media", role: "tab", data: { toggle: "tab" } do
          Media
          %span.badge 12
      %li.pull-right
        = link_to "#tab-configuration", role: "tab", data: { toggle: "tab" } do
          %i.fa.fa-cog
          %span.sr-only Configuration

    .main-content
      #tab-table.tab-pane.active{ role: "tabpanel" }
        .table-container
          %table.trestle-table
            %thead
              %tr
                %th.select-row= check_box_tag "select"
                %th
                %th Name
                %th Email
                %th.text-center Status
                %th.text-center Followers
                %th.text-center Registered
                %th.actions

            %tbody
              - 10.times do |i|
                %tr{ data: { url: "auto" } }
                  %td.select-row= check_box_tag "select"
                  %td.text-center
                    .avatar= image_tag("https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(i.to_s)}.png?d=retro")
                  %td.nowrap= link_to "Person #{i+1}", "/people/#{i+1}"
                  %td= mail_to "person-#{i+1}@example.com"
                  %td.text-center
                    %span.label.label-success Active
                  %td.text-center= (1..100).to_a.sample
                  %td.text-center
                    %time.timestamp
                      = Time.now.strftime("#{Time.now.day.ordinalize} %b %Y")
                      %small= Time.now.strftime("%l:%M:%S %p")
                  %td.actions
                    = link_to "/123", class: "btn btn-delete", method: :delete, data: { toggle: "confirm-delete", placement: "left" } do
                      %i.fa.fa-trash

        %nav.pagination-container
          %p Displaying Users <strong>1&nbsp;-&nbsp;10</strong> of <b>1,234</b>

          %ul.pagination.pagination-sm
            %li.disabled
              %span &laquo;

            %li.active
              %span 1

            %li
              = link_to "#" do
                %span 2

            %li
              = link_to "#" do
                %span 3

            %li
              = link_to "#" do
                %span 4

            %li
              = link_to "#" do
                %span 5

            %li.gap.disabled
              %span &hellip;

            %li
              = link_to "#" do
                %span &raquo;

      #tab-lorem-ipsum.tab-pane{ role: "tabpanel" }
